// Функция расчитывающая количество чисел во введённом числе...
int Count(int Number)
{
    int n = Number, x = 0;
    while (n != 0) {
        n /= 10;
        x++;
    }
    return x;
}
bool polindrom(int *array, int lenght)
{
    
    for(int i = 0; i < lenght/2; ++i)
    {
        if(array[i] != array[lenght-i-1])
        {
            return false;
        }
    }
    return true;
}
int main() {

    int Number, lenght = 0, index, d = 1, *Array;

    cout << "Введите число: ";
    cin >> Number;

    // Функция опр. кол-во цифв.
    lenght = Count(Number);
    Array = new int [lenght]; //Массив

    for(int j = 1; j < lenght; j++)
        d *= 10;

    for(int i = 0; i < lenght; i++){
        index = Number / d % 10;
        Array[i] = index;
        d /= 10;
    }

    for(int i = 0; i < lenght; i++){
        cout << Array[i]<<" ";
    }

    if(polindrom(Array, lenght)) cout << endl << "Является полиндромом";
    else cout << endl << "Не является полиндромом";

    return 0;
}
